{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "noImplicitReturns": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true
  },
  "include": ["js/**/*.ts", "js/**/*.js"],
  "exclude": ["js/mock_runtime.js", "js/node_modules"]
}
